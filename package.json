{
  "name": "prorenata",
  "description": "Script a sequence of commands that work on deep file paths",
  "version": "1.0.17",
  "author": "Joe Honton",
  "license": "CC-BY-NC-ND 4.0",
  "private": true,
  "main": "./dist/main.js",
  "bin": {
    "prn": "./bin/prorenata"
  },
  "scripts": {
    "build": "npm run exim && npm run app",
    "exim": "node /musings/lib/exim/src/rewrite.js ./src ./dbg main.js",
    "test01": "node ./dbg/main.js ./test/build-appA.prn",
    "test01-inspect": "node --inspect-brk=9229 ./dbg/main.js ./test/build-appA.prn",
    "test02": "node ./dbg/main.js ./test/run.prn",
    "test03": "node ./dbg/main.js ./test/pro/shortnames.prn",
    "test04": "node ./dbg/main.js ./test/pro/subdir/shortnames.prn",
    "minify": "npm run minifyA && npm run minifyB && npm run minifyC",
    "minifyA": "node /usr/lib/node_modules/uglify-es/bin/uglifyjs ./dbg/main.js            --output ./dist/main.js            --compress --mangle --keep-classnames --keep-fnames --beautify quote_style=1 --ecma 8",
    "minifyB": "node /usr/lib/node_modules/uglify-es/bin/uglifyjs ./dbg/cli.class.js       --output ./dist/clie.class.js      --compress --mangle --keep-classnames --keep-fnames --beautify quote_style=1 --ecma 8",
    "minifyC": "node /usr/lib/node_modules/uglify-es/bin/uglifyjs ./dbg/prorenata.class.js --output ./dist/prorenata.class.js --compress --mangle --keep-classnames --keep-fnames --beautify quote_style=1 --ecma 8",
    "bump-version": "npm version patch && git push && git push --tags"
  },
  "dependencies": {
    "bluephrase": "git+ssh://root@nk021:/keep/bluephrase#*",
    "joezone": "git+ssh://root@nk021:/keep/joezone#*"
  },
  "files": [
    "bin",
    "dbg",
    "dist"
  ]
}
