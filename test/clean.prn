	trigger    '../test/appA/proto/blue/enclosures'
	dependent  '../test/appA/fused/blue'
	progress   verbose
}

// ----------- blank dependent --------------
clean {
	trigger    '../test/appA/proto/blue/enclosures/standard-wrapper.blue'
	dependent
	progress   verbose
}

